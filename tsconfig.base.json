/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "baseUrl": "src",
    "paths": {
      "@store/*": ["app/modules/core/store/*"],
      "@assets/*": ["assets/*"],
      "@models/*": ["app/modules/core/store/models/*"],
      "@actions/*": ["app/modules/core/store/actions/*"],
      "@images/*": ["assets/images/*"],
      "@styles/*": ["assets/styles/*"],
      "@components/*": ["app/components/*"]
    }
  }
}
